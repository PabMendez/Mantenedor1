<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Login</title>
        <link rel="stylesheet" href="{{ asset('public/css/login.css') }}">
    </head>
    <body>
        {#{% if app.user != null %}
       {{dump(app.user)}}
   {% endif %} #}
        <div class="error"  align="center">
            {% for flashMessage in app.session.flashbag.get('mensaje') %}
                <div class="alert" role="alert">
                    <div class ="container">{{ flashMessage }}</div>
                </div>
            {% endfor %}
        </div>
        <div class="divisito">
             <h2>Formulario Log-in</h2><hr><br> 
            <form action="{{ path('usuario_validar') }}" method="post" id="loginform" name="loginform" >
               
                    <div class="login">
                        <label><b>Nombre de Usuario: </b></label>
                        <input type="text" placeholder="Username" id="username" name="username" class="formularito"><br>
                    </div>
                    <div>
                        <label><b>Password: </b></label>
                        <input type="password" placeholder="Password" name="password"  id="password" class="formularito"><br>
                    </div>
                    <div class="fbtn">
                        <button type="submit" value="Log In" class="button" id="btnlogin" name="">Login</button>
                    </div>
                
            </form>
        </div>
    </body>
</html>

